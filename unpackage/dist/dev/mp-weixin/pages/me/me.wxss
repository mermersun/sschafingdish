.top {
  height: 380rpx;
  background-color: #f0931f;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0 30rpx;
}
.top > view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}
.top > view:first-child > image:first-child {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.top > view:first-child > view {
  flex: 1;
  padding: 15rpx;
}
.top > view:first-child > view > text {
  padding: 8rpx;
  font-size: 1.3em;
}
.top > view:first-child > image:last-child {
  width: 55rpx;
  height: 55rpx;
}
.top > view:last-child {
  display: flex;
  justify-content: space-evenly;
}
.top > view:last-child > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 160rpx;
}
.top > view:last-child > view > text:first-child {
  font-size: 1.5em;
}
.top > view:last-child > view > text:last-child {
  font-size: 12px;
}
.content {
  height: 640rpx;
  padding: 0 30rpx;
}
.content > view:first-child {
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
}
.content > view:first-child > text {
  font-weight: bold;
  color: #000;
}
.content > view:first-child > view {
  display: flex;
  align-items: center;
}
.content > view:first-child > view > text {
  font-size: 12px;
  color: #999;
}
.content > view:first-child > view > image {
  width: 25rpx;
  height: 25rpx;
}
.content > view:nth-child(2) {
  display: flex;
  justify-content: space-evenly;
}
.content > view:nth-child(2) > view {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content > view:nth-child(2) > view > text {
  font-size: 12px;
  padding: 5rpx 45rpx;
}
.content > view:nth-child(2) > view > image {
  width: 80rpx;
  height: 80rpx;
}
.content > view:last-child > text {
  font-weight: bold;
  color: #000;
  line-height: 80rpx;
}
.content > view:last-child > view {
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content > view:last-child > view > image:first-child {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}
.content > view:last-child > view > text {
  flex: 1;
  color: #000;
}
.content > view:last-child > view > image:last-child {
  width: 25rpx;
  height: 25rpx;
}

