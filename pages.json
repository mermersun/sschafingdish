{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				//导航条标题文本
				"navigationBarTitleText": "首页",
				//导航条样式为自定义,就是取消导航条
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/food/food",
			"style": {
				"navigationBarTitleText": "菜品分类",
				"navigationBarTextStyle": "black",
				"navigationBarBackgroundColor": "#fff",
				"backgroundColor": "#fff",
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 20
			}

		}, {
			"path": "pages/shopping/shopping",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/me/me",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/userCenter/userCenter",
			"style": {
				"navigationBarTitleText": "用户中心"
			}

		}, {
			"path": "pages/foodDetail/foodDetail",
			"style": {
				"enablePullDownRefresh": false
				// "navigationBarBackgroundColor": "#fff",
				// "navigationBarTextStyle": "black"
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#f0931f"
	},
	"tabBar": {
		"color": "#999",
		"selectedColor": "#f0931f",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/img/home.png",
				"selectedIconPath": "static/img/home_active.png"
			},
			{
				"pagePath": "pages/food/food",
				"text": "点餐",
				"iconPath": "static/img/order.png",
				"selectedIconPath": "static/img/order_active.png"
			},
			{
				"pagePath": "pages/shopping/shopping",
				"text": "购物车",
				"iconPath": "static/img/shopping.png",
				"selectedIconPath": "static/img/shopping_active.png"
			},
			{
				"pagePath": "pages/me/me",
				"text": "我的",
				"iconPath": "static/img/user.png",
				"selectedIconPath": "static/img/user_active.png"
			}
		]
	},
	"uniIdRouter": {}
}
